lumos fibonacciRecursive;

!! - Program to print fibonacci's nth term using Recursion

task fibonacci(int x, int a, int b) : int {
    if (x == 0) {
        return a;
    }
    if (x == 1) {
        return b;
    }

    return fibonacci(x - 1, b, a + b);
}

main {
    vars
    int number, fib;

    !! - Input
    print("Enter number: ");
    read(number);

    !! - Call function
    fib = fibonacci(number, 0, 1);

    !! - Print result
    println("Fibonacci: ", fib);
}

